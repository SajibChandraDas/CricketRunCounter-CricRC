<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1st Innings: 0/0"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/tvDisplayForFirstInnings"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="6"
                android:layout_weight="1"
                android:id="@+id/b6"
                android:onClick="FirstInningsSix"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="4"
                android:layout_weight="1"
                android:id="@+id/b4"
                android:onClick="FirstInningsFour"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="3"
                android:layout_weight="1"
                android:id="@+id/b3"
                android:onClick="FirstInningsThree"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="2"
                android:layout_weight="1"
                android:id="@+id/b2"
                android:onClick="FirstInningsTwo"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="1"
                android:layout_weight="1"
                android:id="@+id/b1"
                android:onClick="FirstInningsOne"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="WIDE"
                android:id="@+id/bWD"
                android:layout_weight="1"
                android:onClick="FirstInningsWide"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="No Ball"
                android:id="@+id/bNB"
                android:onClick="FirstInningsNoBall"
                android:layout_weight="1"/>

            </LinearLayout>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Wicket"
            android:id="@+id/bWicket"
            android:onClick="FirstInningsWickets"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="End of First Innings"
            android:id="@+id/bEndOfFirstInnings"
            android:onClick="EndOfFirstInnings"/>
    </LinearLayout>
</LinearLayout>
